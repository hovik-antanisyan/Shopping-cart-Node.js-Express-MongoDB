<div class="row">
    <div class="col-sm-6 cl-sm-offset-3 col-md-4 col-md-offset-4">
        <div id="success" class="alert alert-success {{#if noMsg}}hidden{{/if}}">
            {{successMsg}}
        </div>
    </div>
</div>
<div class="row">
    {{# each products as |product index|}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
                <div class="description">
                    <div class="price pull-left">${{this.price}}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to shopping cart</a>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
        {{#ifvalue index  equals=0 }}
            <div class="clearfix"></div>
        {{/ifvalue}}
    {{/each}}
</div>